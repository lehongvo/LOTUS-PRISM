# Azure Storage Configuration:
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=lotus-prism

# Proxy Configuration
PROXY_API_URL=https://proxy-api.example.com
PROXY_API_KEY=your_proxy_api_key
PROXY_CHECK_INTERVAL=3600

# Scraper Configuration
SCRAPER_TIMEOUT=30
SCRAPER_RETRY_COUNT=3
SCRAPER_RETRY_DELAY=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=scraper.log

# Market Trends Configuration
MARKET_TRENDS_API_URL=https://market-trends-api.example.com
MARKET_TRENDS_API_KEY=your_market_trends_api_key
MARKET_TRENDS_UPDATE_INTERVAL=86400

# Database Configuration:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lotus_prism
DB_USER=postgres
DB_PASSWORD=your_db_password

# API Configuration
API_BASE_URL=https://api.example.com
API_KEY=your_api_key
API_TIMEOUT=30

# Data Configuration
DATA_DIR=/data
PRODUCTS_DIR=/data/products
PRICES_DIR=/data/prices
PROMOTIONS_DIR=/data/promotions
MARKET_TRENDS_DIR=/data/market_trends

# Data Retention
BATCH_SIZE=1000
MAX_WORKERS=4
CHUNK_SIZE=1024

# Data Validation
MIN_PRICE=0
MAX_PRICE=1000000000
REQUIRED_FIELDS=["id", "name", "price", "retailer"]
VALID_CATEGORIES=["food", "beverage", "household", "personal_care"]

# Data Export
EXPORT_DIR=/data/exports
EXPORT_FREQUENCY=daily
EXPORT_TIME=00:00

# Data Analysis
ANALYSIS_DIR=/data/analysis
REPORT_DIR=/data/reports
CHART_DIR=/data/charts
STATS_DIR=/data/stats

# Data Quality
QUALITY_THRESHOLD=0.95
VALIDATION_RULES_DIR=/data/rules
ERROR_LOG_DIR=/data/errors
CORRECTION_DIR=/data/corrections